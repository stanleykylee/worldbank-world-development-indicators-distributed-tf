{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Four EC2 instances with attached GPUs running Ubuntu 16.04 LTS",
    
    "Parameters": {
        "InstanceType": {
            "Description": "Instance types of the nodes",
            "Type": "String"
        },
        "KeyName": {
            "Description": "Name of existing EC2 keypair",
            "Type": "String"
        },
        "SecurityGroup": {
            "Description": "Security group for the instance",
            "Type": "String"
        }
    },

    "Resources": {
        "EC2Node0": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "SecurityGroups": [ 
                    { 
                        "Ref": "SecurityGroup"
                    }
                ],
                "ImageId": "ami-80861296",
                "InstanceType": { "Ref": "InstanceType" },
                "KeyName": { "Ref": "KeyName" },
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/sdm",
                        "Ebs": {
                            "VolumeType": "io1",
                            "Iops": "200",
                            "DeleteOnTermination": "true",
                            "VolumeSize": "10"
                        }
                    },
                    {
                        "DeviceName": "/dev/sdk",
                        "NoDevice": {}
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": ["", 
                            [
                                "#!/bin/bash\n",
                                "apt-get update && apt-get install -y ",
                                "libcupti-dev python-pip python-dev python-virtualenv\n",
                                "wget 'http://developer.download.nvidia.com/compute/cuda/repos/ubuntu1604/x86_64/cuda-repo-ubuntu1604_8.0.61-1_amd64.deb'",
                                "dpkg -i cuda-repo-ubuntu1604_8.0.61-1_amd64.deb\n",
                                "apt-get update && apt-get install -y cuda\n",
                                "echo 'export PATH=/usr/local/cuda-8.0.61/bin' >> ~/.bashrc\n",
                                "echo 'export LD_LIBRARY_PATH=/usr/local/cuda-8.0.61/lib64' >> ~/.bashrc\n",
                                "virtualenv --system-site-packages ~/tf-env\n",
                                "cd ~/tf-env && source ./bin/activate\n",
                                "pip install --upgrade tensorflow-gpu"
                            ]
                        ]
                    }
                }
            }
        },
